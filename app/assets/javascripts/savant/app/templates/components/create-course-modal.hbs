<div class="modal-background"></div>
<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create your new course</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" {{action "closeCreateCourseModal" }}>
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form {{action 'createCourse' on='submit'}}>
          <div class="form-group">
            <label for="text">Course Name</label>
            {{input type="text" class="form-control" id="name" aria-describedby="coursenameHelp" placeholder="Course Name" value=newCourse.name}}
          </div>
          <button type="submit" class="btn btn-primary">Create Course</button>
        </form>
      </div>
    </div>
  </div>
</div>